<%- include("partials/_header") -%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form action="/admin/edit-place/<%= place._id %>" method="post">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Title"
            value="<%= place.title %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="Image"
            value="<%= place.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="thumbnail"
            placeholder="Thumbnail"
            value="<%= place.thumbnail %>"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="content"
            rows="10"
            placeholder="Content"
          >
<%= place.content %></textarea
          >
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="info"
            rows="3"
            placeholder="Info"
          >
<%= place.info %></textarea
          >
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="link"
            rows="2"
            placeholder="Link"
          >
<%= place.link %></textarea
          >
        </div>
        <div class="form-group row">
          <div class="col">
            <input
              class="form-control"
              type="text"
              name="lat"
              placeholder="Lat"
              value="<%= place.lat %>"
            />
          </div>
          <div class="col">
            <input
              class="form-control"
              type="text"
              name="lng"
              placeholder="Lng"
              value="<%= place.lng %>"
            />
          </div>
        </div>
        <div class="form-group row">
          <div class="col">
            <select name="location" class="form-control">
              <option selected><%= place.location %></option>
              <% locations.forEach((item) => { %>
              <option><%= item.title %></option>
              <% }) %>
            </select>
          </div>
          <div class="col">
            <select name="category" class="form-control">
              <option selected><%= place.category %></option>
              <% categories.forEach((item) => { %>
              <option><%= item.title %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="text-center">
          <button class="btn btn-primary" type="submit">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/_footer") -%>
